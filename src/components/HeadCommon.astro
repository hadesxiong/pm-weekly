---
import '../styles/theme.css';
import '../styles/index.css';
---

<!-- Global Metadata -->
<meta charset="utf-8" />
<meta name="viewport" content="width=device-width" />

<link
  rel="icon"
  type="image/svg+xml"
  href="https://gw.alipayobjects.com/zos/k/qv/coffee-2-icon.png"
/>
<link
  rel="alternate icon"
  type="image/x-icon"
  href="https://gw.alipayobjects.com/zos/k/qv/coffee-2-icon.png"
/>

<link rel="sitemap" href="/sitemap.xml" />

<!-- Preload Fonts -->
<link
  rel="stylesheet"
  href="https://gw.alipayobjects.com/os/k/webfont/style.css"
/>

<script
  type="text/javascript"
  src="https://gw.alipayobjects.com/os/k/h3/heti-addon.min.js"
></script>

<script
  type="text/javascript"
  src="https://gw.alipayobjects.com/os/k/3j/lozad.min.js"
></script>

<!-- This is intentionally inlined to avoid FOUC -->
<script is:inline>
  const root = document.documentElement;
  const theme = localStorage.getItem('theme');
  if (
    theme === 'dark' ||
    (!theme && window.matchMedia('(prefers-color-scheme: dark)').matches)
  ) {
    root.classList.add('theme-dark');
  } else {
    root.classList.remove('theme-dark');
  }
  document.addEventListener('DOMContentLoaded', function () {
    const observer = lozad();
    observer.observe();

    const heti = new Heti('.heti');
    heti.autoSpacing();
  });
</script>

<!-- Global site tag (gtag.js) - Google Analytics -->
<script
  async
  src="https://www.googletagmanager.com/gtag/js?id=G-TEL60V1WM9"
  is:inline
></script>
<script>
  // @ts-ignore
  window.dataLayer = window.dataLayer || [];
  function gtag() {
    // @ts-ignore
    dataLayer.push(arguments);
  }
  // @ts-ignore
  gtag('js', new Date());
  // @ts-ignore
  gtag('config', 'G-RP9WWK86CZ');
</script>
